{
  "name": "eslint-config-sanity",
  "version": "5.1.0",
  "description": "Shared eslint configs for sanity-io",
  "main": "index.js",
  "scripts": {
    "test": "eslint .",
    "release": "standard-version",
    "diff": "node ./bin/diff.js && echo '\nnpm update eslint to get latest rules'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanity-io/eslint-config-sanity.git"
  },
  "keywords": [
    "sanity",
    "cms",
    "headless",
    "realtime",
    "content",
    "eslint-config-sanity",
    "eslint",
    "eslintconfig"
  ],
  "author": "Sanity.io <hello@sanity.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sanity-io/eslint-config-sanity/issues"
  },
  "homepage": "https://www.sanity.io/",
  "peerDependencies": {
    "eslint": ">=6.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.15.1",
    "@typescript-eslint/parser": "4.15.1",
    "eslint": "7.20.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-react": "7.22.0",
    "lodash.difference": "4.5.0",
    "prettier": "2.2.1",
    "standard-version": "9.1.0"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "bracketSpacing": false,
    "singleQuote": true
  },
  "standard-version": {
    "skip": {
      "changelog": true
    }
  }
}
